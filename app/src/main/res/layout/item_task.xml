<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <CheckBox
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/cb_completed"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name"
        android:text="Example Task"
        android:maxLines="1"
        android:layout_alignTop="@id/cb_completed"
        android:layout_alignBottom="@id/cb_completed"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:layout_toEndOf="@id/cb_completed"
        android:layout_toStartOf="@id/iv_priority"
        android:textColor="@color/black" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_priority"
        android:src="@drawable/baseline_error_outline_24"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>