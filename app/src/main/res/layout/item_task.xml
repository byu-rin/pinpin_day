<!--        android:layout_alignParentStart="true" />-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time_tc"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/text_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/task_line"
            android:id="@+id/task_line_iv"
            app:layout_constraintStart_toEndOf="@id/time_tc"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:importantForAccessibility="no" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/task_title_tv"
            android:maxLines="1"
            android:text="@string/task_item_title"
            android:textSize="16sp"
            android:textColor="@color/text_color"
            app:layout_constraintStart_toEndOf="@id/task_line_iv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/task_time_tv"
            android:maxLines="1"
            android:text="@string/task_item_runtime"
            android:textSize="12sp"
            android:textColor="@color/text_color"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@id/task_line_iv"
            app:layout_constraintTop_toBottomOf="@id/task_title_tv"
            app:layout_constraintBottom_toBottomOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>



</RelativeLayout>